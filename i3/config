#bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight +20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -20 # decrease screen brightness


# start rofi 
bindsym $mod+d exec rofi -show drun -lines 5 -eh 2 -width 50 -opacity "85" -show-icons -drun-icon-theme Flat-Remix-Green-Dark #Adwaita
# -padding 800 -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575cd" -font "System San Francisco Display 18"

# Disable window title bar
default_border pixel 0
for_window [class=".*"] border pixel 0


## Autostart options
#the next line is included so that the wallpaper is restored (manually added)
#exec --no-startup-id nitrogen --restore
exec_always --no-startup-id feh --randomize --bg-scale ~/Imagens/unsplash/landscape/*
# disable caps lock switch
exec xmodmap -e "clear lock" 
# set caps_lock as escape
exec xmodmap -e "keysym Caps_Lock = Escape" 
#start compton for fading screens and support tranparency
exec compton -f
# gaps
gaps inner 10
smart_gaps on
smart_borders on
#Dropbox
exec dropbox 
#Battery popup
exec_always --no-startup-id bash /home/me/Projects/myScripts/battery-popup


##Shortcut for most used apps

#t for terminal
bindsym Control+Mod1+t exec i3-sensible-terminal
#f for firefox
bindsym Control+Mod1+f exec firefox
#v for vim
bindsym Control+Mod1+v exec vim
#r for ranger
bindsym Control+Mod1+r exec ranger
#z for zathura
bindsym Control+Mod1+z exec zathura


#focus

focus_follows_mouse no
focus_wrapping no


#Move between workspaces

bindsym Ctrl+mod1+Right     workspace next
bindsym Ctrl+mod1+Left      workspace prev

#print screen
bindsym --release Print exec gnome-screenshot -i
bindsym --release $mod+Print exec gnome-screenshot -a
